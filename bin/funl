#!/usr/bin/env bash

set -e

if [[ 0 -eq $# ]]; then
  echo "$(funl version)"
  echo -e "$(funl help)"
  exit 0
fi

if [[ $1 == '--version' ]]; then
  echo "$(funl version)"
  exit 0
fi

if [[ $1 == '-h' ]] || [[ $1 == '--help' ]]; then
  echo -e "$(funl help)"
  exit 0
fi

root_dir=$(dirname $(dirname $(command which funl)))
cmd_path="$root_dir/cmd/funl-$1"

if [[ ! -x $cmd_path ]]; then
  echo "funl: '$1' is not a funl command" >&2
  exit 1
fi

exec "$cmd_path" "$@"
