#!/usr/bin/env bash

set -e

shift

if [[ 0 -eq $# ]]; then
  echo "usage: funl unhook <name>" >&2
  exit 1
fi

if [[ -z $FUNL_HOOKS ]]; then
  FUNL_HOOKS="$FUNL_ROOT/hooks"
fi

hook_path="$FUNL_HOOKS/$1"

if [[ ! -e $hook_path ]]; then
  echo "funl: '$1' isn't registered as hook" >&2
  exit 1
fi

rm -f "$hook_path"
