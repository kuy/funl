#!/usr/bin/env bash

set -e

content=$(cat <<HELP
Usage: funl unhook [-e] <name>...

Unregisters hooks of the given names.

'-e' option can be used to reflect this to the current shell.
e.g. $ eval "\$(funl unhook -e git)"
HELP
)

shift
if [[ 0 -eq $# ]]; then
  echo -e "$content" >&2
  exit 1
fi

if [[ -z $FUNL_HOOKS ]]; then
  FUNL_HOOKS="$FUNL_ROOT/hooks"
fi

opt_eval=""
while [[ $1 ]]; do
  if [[ $1 == '-h' ]] || [[ $1 == '--help' ]]; then
    echo -e "$content"
    exit 0
  fi

  if [[ $1 == '-e' ]]; then
    opt_eval="yes"
    shift
    continue
  fi

  hook_path="$FUNL_HOOKS/$1"
  if [[ ! -e $hook_path ]]; then
    echo "funl: '$1' isn't registered as hook" >&2
    exit 1
  fi

  rm -f "$hook_path"

  if [[ $opt_eval == 'yes' ]]; then
    echo -e "$(funl rehash --undef $1)"
  fi

  shift
done
