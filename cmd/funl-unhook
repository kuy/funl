#!/usr/bin/env bash

DESC=$(cat <<TEXT
Usage: funl unhook <name>...

Unregisters hooks of the given names.
TEXT
)

set -e

. "$FUNL_ROOT/lib/utils"

names=()
opt_pipe=""
while [[ $1 ]]; do
  if [[ $1 == '-h' ]] || [[ $1 == '--help' ]]; then
    echo -e "$DESC"
    exit_with 0
  fi

  if [[ $1 =~ "--pipe=" ]]; then
    opt_pipe="$(echo $1 | sed 's:--pipe=::')"
    shift
    continue
  fi

  if ! is_hooked $1; then
    [[ -n $FUNL_DEBUG ]] && echo "funl-unhook: '$1' isn't registered" >&2
    shift
    continue
  fi

  names+=( "$1" )

  shift
done

if [[ 0 -eq ${#names[@]} ]]; then
  echo -e "$DESC" >&2
  exit_with 1
fi

for name in ${names[@]}; do
  rm -f "$(hook_path $name)"

  echo_to_pipe "$(funl feed undef $name)"
done

exit_with 0
