#!/usr/bin/env bash

DESC=$(cat <<TEXT
Usage: funl hook <name>...

Registers hooks of the given executable, such as builtin command,
program, and shell script.
TEXT
)

set -e

. "$FUNL_ROOT/lib/utils"

names=()
opt_pipe=""
while [[ $1 ]]; do
  if [[ $1 == '-h' ]] || [[ $1 == '--help' ]]; then
    echo -e "$DESC"
    exit_with 0
  fi

  if [[ $1 =~ "--pipe=" ]]; then
    opt_pipe="$(echo $1 | sed 's:--pipe=::')"
    shift
    continue
  fi

  if is_banned $1; then
    [[ -n $FUNL_DEBUG ]] && echo "funl-hook: '$1' is banned" >&2
    shift
    continue
  fi

  if is_hooked $1; then
    [[ -n $FUNL_DEBUG ]] && echo "funl-hook: '$1' is already hooked" >&2
    shift
    continue
  fi

  names+=( "$1" )

  shift
done

if [[ 0 -eq ${#names[@]} ]]; then
  echo -e "$DESC" >&2
  exit_with 1
fi

for name in ${names[@]}; do
  cat <<SH > "$FUNL_HOOKS/$name"
# funl hook file for '$name' command
SH

  echo_to_pipe "$(funl feed def $name)"
done

exit_with 0
