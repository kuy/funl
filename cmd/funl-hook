#!/usr/bin/env bash

set -e

FUNL_BANNED=(funl command)

DESC=$(cat <<TEXT
Usage: funl hook [-e] <name>...

Registers hooks of the given executable, such as builtin command,
program, and shell script.

'-e' option can be used to reflect this to the current shell.
e.g. $ eval "\$(funl hook -e git)"
TEXT
)

is_banned() {
  for ban in ${FUNL_BANNED[@]}; do
    if [[ $ban == $1 ]]; then
      return 0
    fi
  done
  return 1
}

shift
if [[ 0 -eq $# ]]; then
  echo -e "$DESC" >&2
  exit 1
fi

if [[ -z $FUNL_HOOKS ]]; then
  FUNL_HOOKS="$FUNL_ROOT/hooks"
fi

opt_eval=""
while [[ $1 ]]; do
  if [[ $1 == '-h' ]] || [[ $1 == '--help' ]]; then
    echo -e "$DESC"
    exit 0
  fi

  if [[ $1 == '-e' ]]; then
    opt_eval="yes"
    shift
    continue
  fi

  if is_banned $1; then
    shift
    continue
  fi

  hook_path="$FUNL_HOOKS/$1"
  if [[ -e $hook_path ]]; then
    echo "funl: '$1' is already hooked" >&2
    exit 1
  fi

  cat <<SH > "$hook_path"
# funl hook file for '$1' command
SH

  if [[ $opt_eval == 'yes' ]]; then
    echo -e "$(funl feed def $1)"
  fi

  shift
done
