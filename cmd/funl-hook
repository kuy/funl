#!/usr/bin/env bash

set -e

FUNL_BANNED=(funl command)

DESC=$(cat <<TEXT
Usage: funl hook [-e] <name>...

Registers hooks of the given executable, such as builtin command,
program, and shell script.
TEXT
)

is_banned() {
  for ban in ${FUNL_BANNED[@]}; do
    if [[ $ban == $1 ]]; then
      return 0
    fi
  done
  return 1
}

if [[ -z $FUNL_HOOKS ]]; then
  FUNL_HOOKS="$FUNL_ROOT/hooks"
fi

names=()
opt_eval=0
while [[ $1 ]]; do
  if [[ $1 == '-h' ]] || [[ $1 == '--help' ]]; then
    echo -e "$DESC"
    exit 0
  fi

  if [[ $1 == '-e' ]]; then
    opt_eval=1
    shift
    continue
  fi

  if is_banned $1; then
    [[ -n $FUNL_DEBUG ]] && echo "funl-hook: '$1' is banned" >&2
    shift
    continue
  fi

  hook_path="$FUNL_HOOKS/$1"
  if [[ -e $hook_path ]]; then
    [[ -n $FUNL_DEBUG ]] && echo "funl-hook: '$1' is already hooked" >&2
    shift
    continue
  fi

  names+=( "$1" )

  shift
done

if [[ 0 -eq ${#names[@]} ]]; then
  echo -e "$DESC" >&2
  exit 1
fi

for name in ${names[@]}; do
  hook_path="$FUNL_HOOKS/$name"
  cat <<SH > "$hook_path"
# funl hook file for '$name' command
SH

  if [[ $opt_eval -eq 1 ]]; then
    echo -e "$(funl feed def $name)"
  fi
done
